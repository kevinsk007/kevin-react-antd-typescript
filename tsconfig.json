{
  "compilerOptions": {
    "jsx": "react",
    "lib": ["dom", "es2017"],
    "rootDir": "src",
    "allowJs": true,
    "module": "esnext",
    "target": "es2015",
    "sourceMap": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist", "build"]
}
